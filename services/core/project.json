{
  "name": "coreservice",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "services/core/src",
  "projectType": "application",
  "tags": [
    "type:service",
    "scope:api"
  ],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun --watch --no-clear-screen src/index.ts",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun build ./src/index.ts --outdir ../../dist/{projectRoot} --target bun",
        "cwd": "{projectRoot}"
      }
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t credopass-api -f Dockerfile ../..",
        "cwd": "{projectRoot}"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "gcloud run deploy credopass-api --source ../.. --region us-central1",
        "cwd": "{projectRoot}"
      }
    },
    "studio": {
      "executor": "nx:run-commands",
      "options": {
        "command": "drizzle-kit studio",
        "cwd": "{projectRoot}"
      }
    },
    "setup": {
      "executor": "nx:run-commands",
      "options": {
        "command": "drizzle-kit generate && drizzle-kit migrate && bun src/db/seed.ts",
        "cwd": "{projectRoot}"
      }
    }
  }
}