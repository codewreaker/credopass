{
  "name": "@credopass/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "dependencies": {
    "@credopass/validation": "workspace:*",
    "@electric-sql/pglite": "^0.3.14",
    "@hono/zod-validator": "^0.7.5",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.10.7",
    "postgres": "^3.4.8",
    "std-env": "^3.10.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@types/node": "^24.10.1",
    "drizzle-kit": "^0.31.0"
  },
  "scripts": {
    "serve": "bun --watch --no-clear-screen src/index.ts",
    "build": "bun build src/index.ts --outdir ../../dist/services/api --target bun",
    "start": "bun ../../dist/services/api/index.js",
    "migrate": "bun src/db/migrate.ts",
    "seed": "bun src/db/seed.ts",
    "studio": "drizzle-kit studio",
    "docker:build": "docker build -t credopass-api -f Dockerfile ../..",
    "deploy": "gcloud run deploy credopass-api --source ../.. --region us-central1"
  }
}
